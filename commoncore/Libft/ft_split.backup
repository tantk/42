#include "libft.h"

static size_t word_count(char const *s, char c)
{
    size_t  words;
    char    *s_ptr;

    s_ptr = (char *)s;
    words = 0;
    while (*s_ptr)
    {
        if (*s_ptr == c)
        {
            while(*s_ptr == c)
                s_ptr++;
        }
        else
        {
            while(*s_ptr != c)
                s_ptr++;
            words++;
        }
    }
    return (words);
}

char    **ft_split(char const *s, char c)
{
    size_t  words;
    char    **result;
    char    **result_ptr;
    char    *match;
    char    *s_ptr;

    words = word_count(s, c);
    result = (char **)malloc(words * sizeof(char *));
    if (!result)
        return NULL;
    s_ptr = ft_strtrim(s, &c);
    result_ptr = result;
    match = ft_strchr(s, (int)c);
    while(match != NULL)
    {
        *result_ptr = ft_substr(s_ptr, 0, match - s_ptr);
        while(*match == c)
            match++;
        s_ptr = match;
        result_ptr++;
        match = ft_strchr(s_ptr, (int)c);
    }
    *result_ptr = ft_strdup(s_ptr);
    return (result);
}
